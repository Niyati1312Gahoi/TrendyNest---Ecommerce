<% layout('layouts/boilerplate') -%>

<style>
body {
    font-family: 'Poppins', sans-serif; /* Stylish font */
    font-weight: 600; /* Bold font */
    background: linear-gradient(135deg, #FFCDB2, #FFB4A2, #E5989B, #B5828C);
    color: #fff;
    min-height: 100vh;
    display: flex;
    align-items: center; /* Align items from the center */
    justify-content: center; /* Center horizontally */
    text-align: center;
    margin: 0;
    padding-top: 50px; /* Space for the navbar */
}

/* Card Style */
.card {
    background: rgba(255, 255, 255, 0.1);
    padding: 50px 70px; /* Adjust padding */
    border-radius: 20px; /* Rounded corners */
    box-shadow: 0px 10px 40px rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(15px); /* Slight blur effect */
    width: 600%;
    max-width: 700px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px); /* Hover effect for the card */
    box-shadow: 0px 15px 45px rgba(255, 255, 255, 0.6);
}

/* Header */
.card h1 {
    font-size: 36px;
    font-weight: 700;
    color: #fff;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* Input Fields */
.form-control {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    border-radius: 25px;
    padding: 16px;
    margin-bottom: 20px;
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.form-control:focus {
    outline: none;
    background: #00d9ff;
    color: #fff;
}

/* Submit Button */
.btn {
    font-size: 20px;
    padding: 15px 30px;
    border-radius: 30px;
    background: #E5989B;
    color: #fff;
    border: none;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn:hover {
    background: #B5828C;
    color: #fff;
}

/* SignUp Link */
.fw-light a {
    color: #00d9ff;
    text-decoration: none;
}

.fw-light a:hover {
    text-decoration: underline;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Emoji Styling */
.emoji {
    font-size: 40px;
    display: inline-block;
    margin: 0 20px;
    transition: transform 0.3s ease-in-out;
}

.emoji:hover {
    transform: rotate(30deg); /* Slight rotation on hover */
}


</style>






<div class="row">
    <div class="col-md-5 mx-auto">
        <%- include('../partials/flash')  %> 
        <div class="card p-3 shadow-sm m-2">
            <h1 class="display-6">Login</h1>
            <form action="/login" method="post">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Username">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-success btn-block btn-small">Login</button>
                <p class="fw-light mt-2">Don't have an account yet ? <a href="/register">SignUp</a> </p> 
            </form>
        </div>
    </div>
</div>